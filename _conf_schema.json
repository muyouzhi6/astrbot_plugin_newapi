{
  "base_domain": {
    "description": "接口域名（含协议）",
    "type": "text",
    "hint": "例如：https://new.xigua.wiki",
    "default": ""
  },
  "authorization": {
    "description": "Authorization 令牌",
    "type": "text",
    "hint": "Bearer xxx",
    "default": ""
  },
  "new_api_user": {
    "description": "New-Api-User",
    "type": "text",
    "hint": "用户ID",
    "default": ""
  },
  "request_timeout": {
    "description": "请求超时（秒）",
    "type": "int",
    "default": 15
  },
  "default_window_hours": {
    "description": "默认统计窗口（小时）",
    "type": "int",
    "default": 24
  },
  "default_top_n": {
    "description": "默认模型排行数量",
    "type": "int",
    "default": 5
  },
  "log_page_size": {
    "description": "默认日志条数",
    "type": "int",
    "default": 20
  },
  "use_forward": {
    "description": "概览/模型 使用合并转发",
    "type": "bool",
    "default": true
  },
  "log_use_forward": {
    "description": "日志 使用合并转发",
    "type": "bool",
    "default": true
  },
  "user_use_forward": {
    "description": "额度 使用合并转发",
    "type": "bool",
    "default": false
  },
  "llm_enabled": {
    "description": "启用 LLM 分析",
    "type": "bool",
    "default": false
  },
  "llm_base_url": {
    "description": "LLM API 基础地址（OpenAI 兼容，例 https://api.xxx/v1）",
    "type": "text",
    "default": ""
  },
  "llm_api_key": {
    "description": "LLM API Key",
    "type": "text",
    "default": ""
  },
  "llm_model": {
    "description": "LLM 模型名",
    "type": "text",
    "default": ""
  },
  "llm_timeout": {
    "description": "LLM 超时（秒）",
    "type": "int",
    "default": 20
  }
}
